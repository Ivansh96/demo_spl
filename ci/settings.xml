<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <server>
            <id>default</id>
            <username>${env.MAVEN_USERNAME}</username>
            <password>${env.MAVEN_PASSWORD}</password>
        </server>
    </servers>
    <mirrors>
        <mirror>
            <id>default</id>
            <mirrorOf>*</mirrorOf>
            <url>${env.MAVEN_REPOSITORY}</url>
        </mirror>
    </mirrors>
    <profiles>
        <profile>
            <id>default</id>
            <properties>
                <altSnapshotDeploymentRepository>default::default::${env.MAVEN_SNAPSHOT_REPOSITORY}</altSnapshotDeploymentRepository>
                <altReleaseDeploymentRepository>default::default::${env.MAVEN_RELEASE_REPOSITORY}</altReleaseDeploymentRepository>
            </properties>
            <repositories>
                <repository>
                    <id>central</id>
                    <name>maven</name>
                    <url>${env.MAVEN_REPOSITORY}</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <name>maven</name>
                    <url>${env.MAVEN_REPOSITORY}</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>default</activeProfile>
    </activeProfiles>
</settings>
